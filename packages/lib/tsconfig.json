{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": ".",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "package.json"
  ],
  "exclude": ["node_modules"]
}